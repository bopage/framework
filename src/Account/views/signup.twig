{% extends "layout.twig" %}

{% block body %}
<form method="post" action="{{path('account.signup')}}" accept-charset="UTF-8">
    {{ csrfInput() }}
    {{field('username', user.username, 'Nom de l\'utilisateur')}}
    {{field('email', user.email, 'Email', {type: 'email'})}}
    {{field('password', null, 'Mot de passe', {type: 'password'})}}
    {{field('password_confirm', null, 'Confirmer le mot de passe', {type: 'password'})}}

    <button class="btn btn-primary">S'inscrire</button>
</form>

{% endblock %}