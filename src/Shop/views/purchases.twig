{% extends "layout.twig" %}

{% block body %}
	<h1>Mes achats</h1>
	<table class="table table-striped">
		<thead>
			<tr>
				<td>Nom du produit</td>
				<td>Date d'achat</td>
			</tr>
		</thead>
		<tbody>
			{% for purchase in purchases %}
				<tr>
					<td>{{purchase.productName}}</td>
					<td>{{purchase.createdAt.format('d/m/Y H:i:s')}}</td>
					<td>
						{% if purchase %}
							<a target="_blank" href="{{path('shop.download', {id: purchase.productId})}}" class="btn btn-primary">
								Télécharger</a>
							<a target="_blank" href="{{path('shop.invoice', {id: purchase.id})}}" class="btn btn-primary">
								Facture</a>
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
