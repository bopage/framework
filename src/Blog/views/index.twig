{% extends 'layout.twig' %}

{% block title %}

	{% if category %}
		{{category.name}}
		{% if page > 1 %}, page
			{{page}}
		{% endif %}
	{% else %}
		BLOG
		{% if page > 1 %}, page
			{{page}}
		{% endif %}
	{% endif %}

{% endblock %}

{% block body %}

	{% if category %}
		<h2 class="mt-4 mb-4 text-center">categorie:
			{{category.name}}
			{% if page > 1 %}, page
				{{page}}
			{% endif %}
		</h2>
	{% else %}
		<h2 class="mt-4 mb-4 text-center">BIENVENUE SUR LE BLOG
			{% if page > 1 %}, page
				{{page}}
			{% endif %}
		</h2>
	{% endif %}

	<div class='container'>
		<div class="row">

			<div class="col-md-9">
				<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
					{% for post in posts %}
						<div class="col">
							<div class="card shadow-sm">
								<h5>{{ post.name }}
								</h5>
								<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveaspectratio="xMidYMid slice" focusable="false">
									<title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
								</svg>

								<div class="card-body">
									{% if post.category_name %}
										<p>
											<a href={{ path('blog.category', {slug: post.category_slug} ) }}>{{ post.category_name }}</a>
										</p>
									{% endif %}
									<p class="card-text">
										{{post.content |  excerpt | nl2br}}
									</p>
									<div class="d-flex justify-content-between align-items-center">
										<div class="btn-group">
											<button type="button" class="btn btn-sm btn-outline-secondary">
												<a href={{ path('blog.show', {slug: post.slug, id: post.id} ) }}>Voir plus</a>
											</button>
										</div>
										<small class="text-muted">
											{{ post.created_at | ago }}
										</small>
									</div>
								</div>
							</div>
						</div>


					{% endfor %}
				</div>
				{% if category %}
					{{ paginate(posts, 'blog.category', {slug: category.slug})}}
				{% else %}
					{{ paginate(posts, 'blog.index',)}}

				{% endif %}
			</div>
			<div class="col-6 col-md-3">
				<ul class="list-group">
					{% for c in categories %}
						<li class="list-group-item {% if c.id == category.id %} active {% endif %}">
							<a style="color:inherit" href={{ path('blog.category', {slug: c.slug} ) }}>{{c.name}}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>

{% endblock %}
